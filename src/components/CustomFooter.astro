---
import Adaptive from '@components/Adaptive.astro';
---

<div class='footer-container'>
    <div class='brand not-content'>
        <h1 class='brand-name'>严阵以待中国百科</h1>
    </div>

    <div class='credits'>
        <Adaptive mobile>
            <div class='info-item' id='left'>
                <p>
                    由 凌卡 创作
                    <br />
                    内容版权所有 © 2025 凌卡，保留所有权利
                </p>
            </div>
            <div class='info-item' id='right'>
                <p>
                    由先进的 <a href="https://astro.build/">Astro</a> 框架驱动
                    <br />
                    网站由 长安 (2073) 创作和托管
                </p>
            </div>
        </Adaptive>
    </div>
</div>

<style>
    .footer-container {
        width: 100%;
        text-align: left;
        padding-top: 5rem;
    }

    .footer-container .brand {
        display: inline-block;
    }

    :root .footer-container .brand .logo {
        filter: none;
        width: 3rem;
        vertical-align: middle;
    }

    .footer-container .brand .brand-name {
        display: inline-block;
        vertical-align: middle;
        font-family: "WDXL Lubrifont SC", sans-serif;
    }

    div#right {
        text-align: right;
    }

    @media (width < 50rem) {
        .footer-container {
            text-align: center;
        }

        div#right {
            text-align: inherit;
        }
    }

    .footer-container .credits {
        margin-top: 1rem;
    }

    p {
        line-height: 2rem;
    }
</style>